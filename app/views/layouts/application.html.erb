<!DOCTYPE html>
<html>
  <head>
    <title>Everyleaf</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    <% if logged_in? %>
    <% if current_user.admin == true %>
      <%= link_to "Admininistration page", admin_users_path %>
    <% end %>
    <%= link_to "Profile", user_path(current_user.id) %>
    <%= link_to " New task", new_task_path %>
    <%= link_to "Tasks", tasks_path %>
    <%= link_to "Labels", labels_path %>
    <%= link_to "Log Out", session_path(current_user.id), method: :delete %>
     <%= link_to 'My page', user_path(current_user.id), class: "link" %> |
    <% else %>
    <%= link_to "Sign Up", new_user_path %>
    <%= link_to "Log In", new_session_path %>
    <% end %>
    <%= yield %>
  </body>
